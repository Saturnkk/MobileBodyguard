<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settingView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >
    
    <TextView 
        style="@style/activityTitleBar"
        android:text="设置中心"
        />

    <com.le.safe.ui.SettingView
        android:id="@+id/sv_setting_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        settingView:title="设置自动更新"
        settingView:settingviewBackground="first"
        settingView:istoggle="true"
        >
    </com.le.safe.ui.SettingView>
    
    <com.le.safe.ui.SettingView
        android:id="@+id/sv_setting_blacknumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        settingView:title="设置骚扰拦截"
        settingView:settingviewBackground="last"
        settingView:istoggle="true"
        >
    </com.le.safe.ui.SettingView>
    
    
     <com.le.safe.ui.SettingView
         android:id="@+id/sv_setting_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        settingView:title="归属地显示设置"
        settingView:settingviewBackground="first"
        settingView:istoggle="true"
        >
    </com.le.safe.ui.SettingView>
    
    <com.le.safe.ui.SettingView
        android:id="@+id/sv_setting_changebg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        settingView:title="归属地风格设置"
        settingView:settingviewBackground="last"
        settingView:istoggle="false"
        >
    </com.le.safe.ui.SettingView>
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
</LinearLayout>