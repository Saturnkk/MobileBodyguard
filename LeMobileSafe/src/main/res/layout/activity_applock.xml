<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:fitsSystemWindows="true">
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="#429ED6"
	    android:gravity="center_horizontal"
	    android:paddingTop="5dp"
	    android:paddingBottom="5dp"
	    >
	    
	    <Button 
	        android:id="@+id/btn_applock_unlock"
	        android:layout_width="wrap_content"
	        android:layout_height="30dp"
	        android:text="未加锁"
	        android:textColor="#ffffff"
	        android:background="@drawable/dg_btn_confirm_normal"
	        android:padding="5dp"
	        android:textSize="15sp"
	        />
	    <Button 
	        android:id="@+id/btn_applock_lock"
	        android:layout_width="wrap_content"
	        android:layout_height="30dp"
	        android:text="已加锁"
	        android:textColor="#429ED6"
	        android:background="@drawable/dg_button_cancel_normal"
	        android:padding="5dp"
	        android:textSize="15sp"
	        />
	    
	</LinearLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout 
            android:id="@+id/ll_applock_unlock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView 
                android:id="@+id/tv_applock_unlocktitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="未加锁(0)"
                android:textColor="#000000"
                android:background="@android:color/darker_gray"
                android:padding="5dp"
                />
            <ListView 
                android:id="@+id/lv_applock_unlock"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                ></ListView>
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/ll_applock_lock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <TextView 
                android:id="@+id/tv_applock_locktitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="已加锁(0)"
                android:textColor="#000000"
                android:background="@android:color/darker_gray"
                android:padding="5dp"
                />
            <ListView 
                android:id="@+id/lv_applock_lock"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                ></ListView>
        </LinearLayout>
        
    </RelativeLayout>
    
    
    
    
    
    
    
</LinearLayout>