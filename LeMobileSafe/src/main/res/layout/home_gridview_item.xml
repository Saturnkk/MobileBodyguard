<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/selector_home_gridview_item"
    >
    <ImageView 
        android:id="@+id/iv_homegridviewitem_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sjfd"
        />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_toRightOf="@id/iv_homegridviewitem_icon"
	    android:layout_marginLeft="5dp"
	    >
	    <TextView 
	        android:id="@+id/tv_homegridviewitem_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="手机防盗"
	        android:textSize="20sp"
	        android:textColor="#000000"
	        />
	    <TextView 
	        android:id="@+id/tv_homegridviewitem_desc"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="远程定位手机"
	        android:textSize="14sp"
	        android:textColor="#99000000"
	        android:layout_marginTop="3dp"
	        />
	</LinearLayout>
</RelativeLayout>