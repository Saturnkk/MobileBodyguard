<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <!-- drawableLeft : 在文本左边设置图片 
    	 drawablePadding : 图片和文本之间的距离
    	 padding   :  设置控件的内容距离控件内边框的距离
    	 layout_margin  ： 控件距离父控件边框的距离
    	-->
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="初始化密码设置"
        android:textSize="18sp"
        android:textColor="#aa000000"
        android:background="@drawable/dialog_title_background"
        android:drawableLeft="@drawable/dialog_title_default_icon"
        android:drawablePadding="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        />
    <!-- hint : 提示文字 -->
    <EditText 
        android:id="@+id/et_setpassword_psw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:layout_margin="10dp"
        android:inputType="textPassword"
        android:textColor="#aa000000"
        />
     <EditText 
        android:id="@+id/et_setpassword_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入确认密码"
        android:inputType="textPassword"
        android:textColor="#aa000000"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_margin="10dp"
         >
         <Button 
             android:id="@+id/btn_setpassword_ok"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text="确定"
             android:textColor="@android:color/white"
             android:background="@drawable/selector_home_setpassword_dialog_btn_ok"
             android:layout_marginRight="5dp"
             />
         <Button 
             android:id="@+id/btn_setpassword_cancle"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text="取消"
             android:textColor="#000000"
             android:background="@drawable/selector_home_setpassword_dialog_btn_cancle"
             android:layout_marginLeft="5dp"
             />
     </LinearLayout>
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    

</LinearLayout>